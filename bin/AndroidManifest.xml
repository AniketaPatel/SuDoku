<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.sudokuapp"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="8"
        android:targetSdkVersion="17" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name="com.example.sudokuapp.MainActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.example.sudokuapp.GameActivity"
            android:label="@string/title_activity_game" >
        </activity>
        <activity
            android:name="com.example.sudokuapp.About"
            android:label="@string/title_activity_about"
            android:theme="@android:style/Theme.Dialog" >
        </activity>
        <activity
            android:name="com.example.sudokuapp.PuzzleView"
            android:label="@string/title_activity_puzzle_view" >
        </activity>
        <activity
            android:name="com.example.sudokuapp.Keypad"
            android:label="@string/title_activity_keypad" >
        </activity>
        <activity
            android:name="com.example.sudokuapp.Prefs"
            android:label="@string/title_activity_prefs" >
        </activity>
        <activity
            android:name="com.example.sudokuapp.Music"
            android:label="@string/title_activity_music" >
        </activity>
        <activity
            android:name="com.example.sudokuapp.Result"
            android:label="@string/title_activity_result" >
        </activity>
    </application>

</manifest>
